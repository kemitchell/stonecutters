<!doctype html>
<html lang=en-US>
  <head>
    <%- include('../includes/meta.html') -%>
    <title><%= subject %> Subject :: Stonecutters</title>
    <%- include('../includes/head.html') -%>
  </head>
  <body>
    <%- include('../includes/banner.html') -%>
    <%- include('../includes/navigation.html') %>
    <main role=main>
      <h2>Subject: <%= subject %></h2>
      <%_ if (forms.length !== 0) { _%>
      <h3>Forms</h3>
      <ul class=twoColumn>
        <%_ forms.forEach(form => { _%>
        <li><a href=/<%= form.identifier %>><%= form.title %></a></li>
        <%_ }) _%>
      </ul>
      <%_ } _%>
      <%_ if (clauses.length !== 0) { _%>
      <h3>Clauses</h3>
      <ul class=twoColumn>
        <%_ clauses.forEach(clause => { _%>
        <li><a href=/<%= clause.identifier %>/<%= clause.edition %>><%= clause.title %></a></li>
        <%_ }) _%>
      </ul>
      <%_ } _%>
    </main>
    <%- include('../includes/contentinfo.html') -%>
  </body>
</html>
